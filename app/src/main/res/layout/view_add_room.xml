<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/room_details" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Room type" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="No of person per room" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivOne"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="5dp"
                android:src="@drawable/one" />


            <ImageView
                android:id="@+id/ivTwo"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="5dp"
                android:src="@drawable/two" />

            <ImageView
                android:id="@+id/ivThree"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="5dp"
                android:src="@drawable/three" />

            <ImageView
                android:id="@+id/ivFour"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="5dp"
                android:src="@drawable/four" />

            <ImageView
                android:id="@+id/ivFive"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="5dp"
                android:src="@drawable/five" />

            <ImageView
                android:id="@+id/ivSix"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="5dp"
                android:src="@drawable/six" />

            <ImageView
                android:id="@+id/ivSeven"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="5dp"
                android:src="@drawable/seven" />

            <ImageView
                android:id="@+id/ivEight"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="5dp"
                android:src="@drawable/eight" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Rent (monthly)" />

            <EditText
                android:id="@+id/etRent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/single_border_bottom"
                android:inputType="number"
                android:minWidth="80dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="No. of rooms" />

            <EditText
                android:id="@+id/etNumRooms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/single_border_bottom"
                android:inputType="number"
                android:minWidth="80dp" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Amenities"
            android:textSize="20dp" />

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/rbYes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@+id/rbNo"
                android:text="Yes" />

            <TextView
                android:id="@+id/rbNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:text="No" />
        </RelativeLayout>

        <in.qwerto.qwertovendor.Amenity
            android:id="@+id/amAttachedBathroom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:amenity_name="Attached bathroom"
            app:image="@drawable/shower" />

        <in.qwerto.qwertovendor.Amenity
            android:id="@+id/amTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:amenity_name="TV"
            app:image="@drawable/tv" />

        <in.qwerto.qwertovendor.Amenity
            android:id="@+id/amAC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:amenity_name="AC"
            app:image="@drawable/ac" />

        <in.qwerto.qwertovendor.Amenity
            android:id="@+id/amEB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:amenity_name="EB Separate"
            app:image="@drawable/eb" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="right">

            <TextView
                android:id="@+id/tvCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="Cancel"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tvDone"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button"
                android:gravity="center"
                android:padding="10dp"
                android:text="OK"
                android:textColor="@android:color/white"
                android:textSize="20dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>