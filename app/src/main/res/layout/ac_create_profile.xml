<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:background="@android:color/black"
        android:layout_width="fill_parent"
        android:layout_height="48dp">
        <TextView
            android:id="@+id/tvGoBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/white"/>
        <TextView
            android:id="@+id/tvTitle"
            android:gravity="center"
            android:text="Sign Up"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_width="fill_parent"
            android:layout_height="48dp" />
    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:layout_below="@+id/toolbar"
        android:id="@+id/llMobileBox"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/pick_number"
        android:padding="5dp">
        <LinearLayout
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            android:background="@drawable/single_border_bottom"
            android:paddingBottom="10dp"
            android:gravity="center_vertical">
            <ImageView
                android:layout_weight="7"
                android:layout_width="@dimen/welcome_box"
                android:layout_height="48dp"
                android:src="@drawable/person"/>
            <EditText
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="Enter name"
                android:paddingLeft="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            android:background="@drawable/single_border_bottom">
            <ImageView
                android:layout_weight="7"
                android:layout_width="@dimen/welcome_box"
                android:layout_height="48dp"
                android:src="@drawable/email"/>
            <EditText
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="Enter Email ID"
                android:layout_margin="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            android:background="@drawable/single_border_bottom"
            android:paddingBottom="10dp">
            <ImageView
                android:layout_weight="7"
                android:layout_width="@dimen/welcome_box"
                android:layout_height="48dp"
                android:src="@drawable/key"/>
            <EditText
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="Enter OTP"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">
            <ImageView
                android:layout_weight="7"
                android:layout_width="@dimen/welcome_box"
                android:layout_height="48dp"
                android:src="@drawable/lock"/>
            <EditText
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="Enter Password"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_below="@+id/llMobileBox"
        android:id="@+id/tvCreateAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create account"
        android:textColor="@android:color/white"
        android:textSize="25dp"
        android:background="@drawable/button"
        android:layout_marginRight="60dp"
        android:layout_marginBottom="10dp"
        android:paddingBottom="20dp"
        android:paddingTop="10dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:elevation="10dp"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="By creating an Account, I agree to Qwerto terms of service and privacy policy"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"/>

</RelativeLayout>