            android:id="@+id/amSpa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:amenity_name="Spa \u0026 massage"/>


        <in.qwerto.qwertovendor.Views.Amenity
            android:id="@+id/amTravelDesk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:amenity_name="Travel desk"/>


        <in.qwerto.qwertovendor.Views.Amenity
            android:id="@+id/amFrontDesk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:amenity_name="24hr front desk"/>


        <in.qwerto.qwertovendor.Views.Amenity
            android:id="@+id/amConferenceHall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:amenity_name="Conference hall"/>


        <in.qwerto.qwertovendor.Views.Amenity
            android:id="@+id/amBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:amenity_name="Bar"/>


        <in.qwerto.qwertovendor.Views.Amenity
            android:id="@+id/amPartyHall"
            android:layout_width="match_parent"
