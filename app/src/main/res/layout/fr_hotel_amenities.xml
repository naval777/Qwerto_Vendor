            android:id="@+id/amPlayGround"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:amenity_name="Play ground"/>


        <in.qwerto.qwertovendor.Views.Amenity
            android:id="@+id/idSportsFacilities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:amenity_name="Sports faclities"/>


        <in.qwerto.qwertovendor.Views.Amenity
            android:id="@+id/amGym"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:amenity_name="Gym"/>

    </LinearLayout>

</ScrollView>