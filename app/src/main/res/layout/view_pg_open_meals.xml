<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llMealOpen"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/single_border_bottom"
    android:clickable="false"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Meals"
            android:layout_gravity="center"
            android:textSize="20dp" />

        <LinearLayout
            android:id="@+id/llMealYes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:clickable="false"
                android:id="@+id/rbMealsYes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/selector_radio" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="Yes"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llMealNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:clickable="false"
                android:id="@+id/rbMealsNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/selector_radio"
                android:checked="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llMealList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    </LinearLayout>

    <TextView
        android:visibility="gone"
        android:id="@+id/tvAddMealPlan"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:gravity="center"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="Add a meal plan"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

</LinearLayout>
