<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical">

    <ImageView
        android:id="@+id/ivAmenityIcon"
        android:layout_weight="1"
        android:layout_width="25dp"
        android:layout_height="20dp"
        android:src="@drawable/smoking"
        android:layout_alignParentLeft="true"/>
    <TextView
        android:id="@+id/tvAmenityName"
        android:layout_toRightOf="@+id/ivAmenityIcon"
        android:layout_marginLeft="10dp"
        android:layout_weight="5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Washing machine"/>
    <RadioButton
        android:button="@drawable/selector_radio"
        android:layout_toLeftOf="@+id/rbNo"
        android:id="@+id/rbYes"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"/>
    <RadioButton
        android:button="@drawable/selector_radio"
        android:layout_alignParentRight="true"
        android:id="@+id/rbNo"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    </RelativeLayout>